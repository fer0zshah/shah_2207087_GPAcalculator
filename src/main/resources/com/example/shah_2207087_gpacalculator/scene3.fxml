<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns:fx="http://javafx.com/fxml" spacing="30" alignment="CENTER" style="-fx-background-color: #fffff8; -fx-border-color: #d4af37; -fx-border-width: 8; -fx-padding: 40;">
    <Label text="Semester Grade Report" style="-fx-font-size: 32px; -fx-font-weight: bold; -fx-text-fill: #b8860b;"/>
    <Label fx:id="gpaLabel" text="Your GPA: 0.00" style="-fx-font-size: 28px; -fx-text-fill: #27ae60;"/>

    <TableView fx:id="resultTable" prefHeight="400" style="-fx-background-color: #fdfd96;">
        <columns>
            <TableColumn text="Course Name" prefWidth="220"/>
            <TableColumn text="Code" prefWidth="100"/>
            <TableColumn text="Credit" prefWidth="80"/>
            <TableColumn text="Teacher 1" prefWidth="150"/>
            <TableColumn text="Teacher 2" prefWidth="150"/>
            <TableColumn text="Grade" prefWidth="80"/>
            <TableColumn text="Points" prefWidth="80"/>
        </columns>
    </TableView>

    <Button text="â† New Calculation" prefWidth="200" style="-fx-background-color: #3498db; -fx-text-fill: white;" onAction="#newCalculation"/>
</VBox>