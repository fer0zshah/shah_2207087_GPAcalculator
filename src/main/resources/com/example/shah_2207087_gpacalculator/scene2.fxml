<BorderPane fx:id="rootPane" prefHeight="920.0" prefWidth="845.0" style="-fx-background-color: #aaf0f1;" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1">
    <top>
        <VBox alignment="CENTER" spacing="15.0" style="-fx-padding: 20; -fx-background-color: #2a3e50;">
            <children>
                <Label style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: white;" text="GPA Calculator-Enter Course" textFill="WHITE" />
            </children>
        </VBox>
    </top>
    <center>
        <VBox prefHeight="760.0" prefWidth="846.0" style="-fx-padding: 30; -fx-spacing: 30;">
            <children>
                <HBox alignment="CENTER_LEFT" prefHeight="23.0" prefWidth="791.0" spacing="10.0" style="-fx-padding: 10;">
                    <children>
                        <Label style="-fx-font-weight: bold;" text="Total Semester Credits:" />
                        <TextField fx:id="totalCreditField" prefWidth="100.0" promptText="e.g. 18.0" />
                    </children>
                </HBox>
                <HBox prefHeight="27.0" prefWidth="791.0" style="-fx-padding: 0; -fx-spacing: 10;">
                    <children>
                        <Button mnemonicParsing="false" onAction="#addCourse" style="-fx-background-color: #27ae60; -fx-text-fill: white;" text="Add Courses" />
                        <Button mnemonicParsing="false" onAction="#clearFeilds" prefHeight="26.0" prefWidth="97.0" style="-fx-background-color: #ff0020; -fx-text-fill: white;" text="Clear Field" />
                    </children>
                </HBox>
                <GridPane hgap="15.0" prefHeight="227.0" prefWidth="791.0" vgap="12.0">
                    <columnConstraints>
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                    </rowConstraints>
                    <children>
                        <Label text="CourseName" />
                        <Label text="CourseCode" GridPane.rowIndex="1" />
                        <Label text="Credit" GridPane.rowIndex="2" />
                        <Label text="Teacher1" GridPane.rowIndex="3" />
                        <Label text="Teacher2" GridPane.rowIndex="4" />
                        <Label GridPane.rowIndex="5" />
                        <TextField fx:id="NameFeild" GridPane.columnIndex="1" />
                        <TextField fx:id="CodeFeild" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                        <TextField fx:id="CreditFeild" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                        <TextField fx:id="Teacher1Feild" GridPane.columnIndex="1" GridPane.rowIndex="3" />
                        <TextField fx:id="teacher2Feild" GridPane.columnIndex="1" GridPane.rowIndex="4" />
                        <Label text="Grade" GridPane.rowIndex="5" />
                        <ComboBox fx:id="gradebox" prefWidth="150.0" GridPane.columnIndex="1" GridPane.rowIndex="5" />
                    </children>
                </GridPane>
                <TableView prefHeight="300.0">
                    <columns>
                        <TableColumn minWidth="0.0" prefWidth="213.60004270076752" text="CourseName" />
                        <TableColumn minWidth="0.0" prefWidth="107.20001220703125" text="CourseCode" />
                        <TableColumn prefWidth="86.4000244140625" text="Credit" />
                        <TableColumn minWidth="0.0" prefWidth="148.79995727539062" text="Teacher1" />
                        <TableColumn minWidth="0.0" prefWidth="140.7999267578125" text="Teacher2" />
                        <TableColumn minWidth="0.0" prefWidth="95.2000732421875" text="Grade" />
                    </columns>
                </TableView>
                <HBox prefHeight="38.0" prefWidth="782.0" style="-fx-spacing: 10;">
                    <children>
                        <Label style="-fx-font-weight: bold;" text="Current Credits: ">
                            <padding>
                                <Insets top="10.0" />
                            </padding>
                        </Label>
                        <Label fx:id="currentCreditLabel" alignment="CENTER" style="-fx-padding: 10;" text="0.0">
                            <padding>
                                <Insets top="10.0" />
                            </padding>
                        </Label>
                        <Region prefHeight="40.0" prefWidth="521.0" style="-fx-padding: 20;" />
                        <Button mnemonicParsing="false" onAction="#calculateButton" style="-fx-alignment: center; -fx-background-color: #27ae60; -fx-line-spacing: 20; -fx-padding: 10;" text="Calculate GPA" />
                    </children>
                </HBox>
                <Button mnemonicParsing="false" onAction="#backToHome" text="&lt;-Back to home" />
            </children>
        </VBox>
    </center>
</BorderPane>
